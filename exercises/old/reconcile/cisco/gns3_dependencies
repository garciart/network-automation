git clone https://github.com/GNS3/dynamips.git
git clone https://github.com/GNS3/ubridge.git
# Python dependencies
sudo yumdownloader --resolve python3 # Also installs python3-setuptools
sudo yumdownloader --resolve python3-devel
sudo yumdownloader --resolve python3-tools
sudo yumdownloader --resolve python-pip
